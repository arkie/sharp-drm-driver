// https://github.com/hyphenlee/jdi-drm-rpi
/dts-v1/;
/plugin/;

/ {
	compatible = "raspberrypi,model-zero-2-w", "brcm,bcm2837", "brcm,bcm2835", "brcm,bcm2708", "brcm,bcm2709";

	fragment@0 {
		target = <&spi0>;
		__overlay__ {
			status = "okay";

			spidev@0{
				status = "disabled";
			};

			spidev@1{
				status = "disabled";
			};
		};
	};

	fragment@1 {
		target = <&spi0_pins>;
		__overlay__ {
			brcm,pins = <0x0a 0x0b>; /* skipping bcm9 MISO */
		};
	};

	fragment@2 {
		target = <&gpio>;
		__overlay__ {
			sharp_pins: sharp_pins {
				brcm,pins = <23 22 18 17>;
				brcm,function = <1 1 1 0>; /* out */
			};
		};
	};

	fragment@3 {
		target = <&spi0>;
		__overlay__ {
			/* needed to avoid dtc warning */
			#address-cells = <1>;
			#size-cells = <0>;

			sharp_drm: sharp_drm@0{
				compatible = "sharp-drm";
				reg = <0>;
				pinctrl-names = "default";
				pinctrl-0 = <&sharp_pins>;
				vcom-gpios = <&gpio 23 0>;
				disp-gpios = <&gpio 22 0>;
				backlit-gpios = <&gpio 18 0>;
				spi-cs-high = <1>;
				spi-max-frequency = <4000000>;
				buswidth = <8>;
				debug = <0>;

				interrupt-parent = <&gpio>;
				interrupts = <17 0x01>;
			};
		};
	};
};
